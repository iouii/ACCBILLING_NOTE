                        </table>
                    </div>
                    
                </div>

            </div>
            

        </div>

    </div>
</div>

<script>

    function LoginQu() {

        var QuoId = $("#QuoId").val();
        var QuoPass = $("#QuoPass").val();

        var fileData = new FormData();


        Objdata = { QuoId: QuoId, QuoPass: QuoPass };
        loginUser = JSON.stringify(Objdata);
        $.ajax({
            type: "POST",
            url: "/System/Login",
            data: { JsonUser: loginUser },
            dataType: "json",
            success: function (data) {
                //alert(data);
                if (data == "1") {
                    location.href = "@Url.Action("Chart","SumaryReport")";
                } else {
                    alert("รหัสไม่ถูกต้อง");
                }
            }
        });
    }

</script>

